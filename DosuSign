(function execute(inputs, outputs) {
    var instanceName = gs.getProperty('instance_name');
    gs.info("Instance name: " + instanceName);
    var restMessage = new sn_ws.RESTMessageV2();
    restMessage.setHttpMethod('POST');
    var endpoint = 'https://' + instanceName + '.service-now.com/api/1467923/docusign_e_signature/' + 
        inputs.client_id + '/' + 
        inputs.client_secret + '/' + 
        inputs.account_id + '/' + 
        encodeURIComponent(inputs.requested_software) + '/' + 
        encodeURIComponent(inputs.requester) + '/' + 
        inputs.refresh_token  + '/' + 
        encodeURIComponent(inputs.approver_name)  + '/' +
        encodeURIComponent(inputs.approver_email);
    gs.info("EndPoint: " + endpoint);
    restMessage.setEndpoint(endpoint);
    var response = restMessage.execute();
    var responseBody = response.getBody();
    gs.info("Response from DocuSign: " + JSON.stringify(responseBody));
    gs.info("Access Token: " + responseBody.accessToken);
    gs.info("Refresh Token: " + responseBody.refreshToken);
    gs.info("Rest: " + JSON.stringify(responseBody.result.envelopeResponse));

    
})(inputs, outputs);
